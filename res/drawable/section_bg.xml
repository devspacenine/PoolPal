<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item>
		<shape android:shape="rectangle">
			
			<solid android:color="@color/drop_shadow_light" />
			
		</shape>
	</item>
	
    <item android:top="1px"
        android:right="1px"
        android:bottom="1px"
        android:left="1px" >
        
        <shape android:shape="rectangle">
            
            <solid android:color="@color/drop_shadow_mid" />
            
        </shape>
        
    </item>
	
    <item android:top="2px"
        android:right="2px"
        android:bottom="2px"
        android:left="2px" >
        
        <shape android:shape="rectangle">
            
            <solid android:color="@color/drop_shadow_dark" />
            
        </shape>
        
    </item>
    
    <item android:right="2px"
        android:bottom="3px"
        android:top="1px"
        android:left="1px" >
        
        <shape android:shape="rectangle">
            
            <solid android:color="@android:color/white" />
            
			<padding android:top="1px"
			    android:right="2px"
			    android:bottom="3px"
			    android:left="1px" />
            
        </shape>
        
    </item>
	
</layer-list>