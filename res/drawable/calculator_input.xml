<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/divider_grey_light" />
        </shape>
    </item>

    <item android:top="1dp"
        android:left="1dp" >
        <shape android:shape="rectangle">
            <solid android:color="@color/divider_grey_dark" />
        </shape>
    </item>

    <item android:top="1dp"
        android:left="1dp"
        android:bottom="1dp"
        android:right="1dp" >
		<shape
			android:shape="rectangle">
			<solid android:color="@color/white_light" />
		</shape>
	</item>

    <item android:drawable="@drawable/btn_borderless_square" />

</layer-list>